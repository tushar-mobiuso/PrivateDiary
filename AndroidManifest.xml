<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobiuso.mine.privatediary"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
     <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />   
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.mobiuso.mine.ui.TabLayoutActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mobiuso.mine.privatediary.AudioRecordActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.mobiuso.mine.privatediary.CameraPhotoCaptureActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.mobiuso.mine.privatediary.NoteListCapture"
            android:label="@string/app_name" >
        </activity>
        
         <activity
            android:name="com.mobiuso.mine.privatediary.NoteListActivity"
            android:label="@string/app_name" >
        </activity>
        
         <activity
            android:name="com.mobiuso.mine.privatediary.PrivateDiaryActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>